{
  "extends": "airbnb",
  "env": {
      "es6": true,
      "mocha": true,
      "browser": false,
      "node": true
  },
  "globals": {
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
      "no-var": 1,
      "indent": ["error", 2],
      "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
      "arrow-body-style": 0,
      "spaced-comment": "warn",
      "no-underscore-dangle": "warn",
      "prefer-arrow-callback": 1,
      "max-len": [1, 120, 4, {"ignoreUrls": true}],
      "comma-dangle": [2, "only-multiline"],
      "no-param-reassign": ["error", { "props": false}],
      "import/no-amd": 0
  }
}
